{
	"include": [
		"src"
	],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true
	}
}
